/* Skills list component */
@define "skills"
	@if "skills" in value
		ul.skills
			@each value.skills
				li "{{ this }}"

/* Link list component */
@define "links"
	@if "links" in value
		ul.links
			@each value.links
				li
					a[href={{ this }}][target=_blank]
						"{{ this.replace(/(^https?:\\/\\/|\\/$)/g, '') }}"

/* Item component */
@define "item"
	[class=item {{ loop.index === 0 ? "expanded" : "" }}]
		.arrow "â–¼"
		.left
			@if "icon" in value
				img[src={{ value.icon }}]
			@else
				.placeholder

			.content
				@if "location" in value
					.location "{{ value.location }}"

				@use "links"
				@use "skills"

		.right
			h3.title
				@if "title" in value
					"{{ value.title }}"
				@else
					"{{ key }}"

			.description "{{ value.description }}"
			.content
				@dom value.content

/* Item list component */
@define "items"
	[id={{ key }}][class=section {{ loop.index === 0 ? "current" : "" }}]
		h2 "{{ key }}"

		.items
			@eachkey value
				@use "item"

/* Header */

@with info
	.header
		.left
			img[src=assets/me.jpg]

		.right
			h1.name "{{ name }}"

			@each roles
				.role "{{ this }}"

			ul.links
				@eachkey links
					li
						a[href={{ value }}] "{{ key }}"

			.location "{{ location }}"


/* Menu */
.menu
	@eachkey sections
		a[data-section={{ key }}][href=#]
			"{{ key }}"

@eachkey sections
	@use "items"